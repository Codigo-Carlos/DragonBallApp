<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@drawable/namek">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:src="@drawable/hero_image"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOMBRE DE PERSONAJE"
        android:textSize="40sp"
        android:fontFamily="@font/saiyansans"
        android:layout_centerHorizontal="true"
        android:background="@drawable/card2_background"
        android:textColor="#000000"
        android:padding="15dp"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/gardient_background"/>
    <RelativeLayout
        android:id="@+id/item_cardlogin"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:background="@drawable/card2_background"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/title_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Series :"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/saiyansans"
            android:textSize="30sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/item_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="holanda"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/saiyansans"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/title_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender :"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/saiyansans"
            android:textSize="30sp"
            android:layout_below="@+id/title_series"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/item_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="holanda"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/saiyansans"
            android:textSize="30sp"
            android:layout_below="@+id/title_series"
            android:textColor="#000000"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/title_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status :"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/saiyansans"
            android:textSize="30sp"
            android:layout_below="@+id/title_gender"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="holanda"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/saiyansans"
            android:textSize="30sp"
            android:layout_below="@+id/title_gender"
            android:textColor="#000000"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/title_planet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origin planet :"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/saiyansans"
            android:textSize="30sp"
            android:layout_below="@+id/title_status"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/item_planet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="holanda"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/saiyansans"
            android:textSize="30sp"
            android:layout_below="@+id/title_status"
            android:textColor="#000000"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/title_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Species :"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/saiyansans"
            android:textSize="30sp"
            android:layout_below="@+id/title_planet"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/item_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="holanda"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/saiyansans"
            android:textSize="30sp"
            android:layout_below="@+id/title_planet"
            android:textColor="#000000"
            android:layout_alignParentEnd="true"/>




    </RelativeLayout>


</RelativeLayout>